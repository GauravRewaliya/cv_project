<%= form_with(model: candidate) do |form| %>
<%= form.hidden_field :authenticity_token, value: form_authenticity_token %>
  <% if candidate.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(candidate.errors.count, "error") %> errors found , cant be save</h2>

      <ul>
        <% candidate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" ,class: "text-white" %>
    <%= form.text_field :name ,style: "width: 100%;text-align: center;" ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label "Employee ID", style: "display: block" ,class: "text-white"%>
    <%= form.text_field :employ_id ,style: "width: 100%;text-align: center;" ,class: "form-control"%>
  </div>
 
 
      
    <%= form.submit class: 'btn-primary'%>
  
<% end %>
