<%= stylesheet_link_tag  "show" %>


<div class="card text-center" >
  <div class="card-header">
    <%= link_to "arrow_back", candidates_path ,class:"pos_l material-symbols-outlined"  %>
    <h3>
      <strong>Candidate</strong>
    </h3>
  <div class="card-body">
    <div class="formBox">
        <div class="formContainer">
   
<p>
  <strong>name:</strong>
  <%= @candidate.name %>
</p>

<p>
  <strong>employ_id:</strong>
  <%= @candidate.employ_id %>
</p>

<p>
  <strong>email:</strong>
  <%= @candidate.profile.email %>
</p>
<p>
  <strong>gender:</strong>
  <%= @candidate.profile.gender %>
</p>
<p>
  <strong>address:</strong>
  <%= @candidate.profile.address %>
</p>

<p>
  <strong>contact:</strong>
  <%= @candidate.profile.contact %>
</p>
  </div>
  </div>
  </div>
  
  
  <div class="card-footer text-muted" style="position: relative;">
    
    
    <%= link_to "Edit this candidate", edit_candidate_path(@candidate) %>
    
    <%= button_to "Destroy this candidate", @candidate, method: :delete ,class:"btn btn-outline-danger pos_r"%>
  </div>
</div>