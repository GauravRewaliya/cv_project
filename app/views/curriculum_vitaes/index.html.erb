<%= stylesheet_link_tag  "index" %>
<div style="position: relative;">
<h1 class="pos_l">Curriculum Vitae</h1>
<form action="curriculum_vitaes" class="form-inline pos_r">
  <input type="text" name="search" placeholder="Search by name" class="form-control mr-sm-2 form-control-lg">
  <button type="submit" class="btn btn-lg btn-success">Search</button>
</form>
<%= link_to "New CV", new_curriculum_vitae_path ,class: 'btn btn-primary new_pos' %>
</div>

<style>
  .table td, .table th {
    /* + */
    text-align: center;
}
.table .l, .table .l {
    text-align: left;
}
</style>
<div class="table_gr" >
    <table border=1 class="table table-hover table-striped " >
      <tr style="color: white;">
        <th>name</th>
        <th>projects</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Show</th>
        <th>download PDF</th>
        <th>download DOC</th>
      </tr>
      <% @curriculum_vitaes.each do |curriculum_vitae| %>
      <tr>
      <td class="l"><p><%= curriculum_vitae.candidate&.name %></p></td>
      <td>
        <% curriculum_vitae.projects.each do |project| %>
          <%= project.title+", " %>
        <%end%>
      </td>
   
      <td><%= link_to "Edit", edit_curriculum_vitae_path(curriculum_vitae) ,class: "material-symbols-outlined"%></td>
      <td><%= button_to "Delete" , curriculum_vitae , method: :delete ,class: "btn-primary"%></td>
   
      <td>
        <%#<%= link_to "Show this curriculum_vitae", curriculum_vitae , target: "_blank" %>
      <%= link_to curriculum_vitae ,target: '_blank' , class: 'material-symbols-outlined' do %>
      <span>Visibility</span>
      <%end%>
    </td>
  <td><%= link_to pdf_html_req_path(curriculum_vitae), class: 'material-symbols-outlined' do  %>
    <span>picture_as_pdf</span>
      <%end%>
  </td>
  <td><%= link_to docx_html_req_path(curriculum_vitae), class: 'material-symbols-outlined' do  %>
    <span>edit_document</span>
      <%end%>
  </td>
  <!-- <td><%= link_to 'doc by curl download', doc_html_req_path(curriculum_vitae) %></td> -->
    </tr>
    <% end %>
    </table>
  </div>
