
<div class="card" >
  <div class="card-body">
    <div class="index_top_header">
      <h1 >Curriculum Vitae</h1>
      <%= link_to "New CV", new_curriculum_vitae_path ,class: 'btn btn-primary pos_card_new' %>
    </div>

    <div class="table_gr" >
      <table id="example" class="table table-striped table-bordered  table-hover">
          <thead>
            <tr >
              <th>updated time</th>
              <th>name</th>
              <th>projects</th>
              <th class="table_button_gr">Edit</th>
              <th class="table_button_gr">Delete</th>
              <th class="table_button_gr">Show</th>
              <th class="table_button_gr">download PDF</th>
              <th class="table_button_gr">download DOC</th>
            </tr>
          </thead>
          <tbody>
            <% @curriculum_vitaes.each do |curriculum_vitae| %>
              <tr>
                <td ><p><%= curriculum_vitae.updated_at %></p></td>
                <td ><p><%= curriculum_vitae.candidate&.name %></p></td>
                <td>
                  <% curriculum_vitae.cv_projects.each do |project| %>
                    <%= project.title+", " %>
                  <%end%>
                </td>
            
                <td><%= link_to "Edit", edit_curriculum_vitae_path(curriculum_vitae) ,class: "material-symbols-outlined"%></td>
                <td><%= button_to "delete" , curriculum_vitae , method: :delete ,class: "material-symbols-outlined symbols_delete"%></td>
            
                <td>
                  <%= link_to curriculum_vitae ,target: '_blank' , class: 'material-symbols-outlined' do %>
                  <span>Visibility</span>
                  <%end%>
                </td>
                <td>
                  <!-- <%= link_to pdf_html_req_path(curriculum_vitae), class: 'material-symbols-outlined' do  %>
                    <span>picture_as_pdf</span>
                  <%end%> -->
                    <div class="pdf-button-container">
                      <a class="cv-ajax-button material-symbols-outlined" href="#" data-cv-id="<%= curriculum_vitae.id %>" onclick="pdf_preload(this)">
                        <span>picture_as_pdf</span>
                      </a>
                    </div>
                </td>
                <td>
                  <div class="doc-button-container">
                    <a class="cv-ajax-button material-symbols-outlined" href="#" data-cv-id="<%= curriculum_vitae.id %>" onclick="doc_preload(this)">
                      <span>edit_document</span>
                    </a>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>