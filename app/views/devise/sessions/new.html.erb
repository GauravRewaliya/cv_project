<div class="topHeader">
  <h1>Log in</h1>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- awsome fonts -->
  
  <%= f.email_field :email,class: "inputText" %>
  <i class="fa-solid fa-user"></i>
    <br>

    <%= f.password_field :password ,class: "inputText" %>
    <i class="fa-sharp fa-solid fa-key"></i>
      <br>

    <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
      <% end %>

  <%= f.submit "Log in" ,id: "submitButton" %>

<%end%>
              <br>
