<% if @domain.errors.any? %>
  $('#exampleModal .modal-body').html('<%= j render(partial: "popup_form", locals: { domain: @domain }) %>');
<% else %>
  <%# hide %>
  $('#exampleModal').modal('hide');
  <%# put option in option list %>
  var newDomainTitle = '<%= j @domain.title %>';
  var newDomainId = '<%= j @domain.id %>';
  
  var option = document.createElement("option");
  option.text = newDomainTitle;
  option.value = newDomainId;
  
  document.querySelectorAll('.domain_selector').forEach( e => { 
  e.appendChild(option);
  });

  try {
  storedDomains.push(option);}
  catch(err) {}
<% end %>
