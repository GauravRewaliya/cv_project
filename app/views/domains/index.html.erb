<div style="position: relative;">
<h1 class="pos_l">Domains</h1>

<form action="domains" class="form-inline pos_r">
  <input title="text" name="search" placeholder="Search" class="form-control mr-sm-2 form-control-lg">
  <button title="submit" class="btn btn-lg btn-success">Search</button>
</form>
<%= link_to "New domain", new_domain_path,class: 'btn btn-primary new_pos' %>
</div>
<div class="table_gr">
  <table border=1 class="table table-hover table-striped">
    <tr style="color:white;">
       <th>Title</th>
       <th>Edit</th>
      <th>Delete</th>
     </tr>
  <% @domains.each do |domain| %>
  <tr>
    <td><p><%= domain.title %></p></td>
    <td><%= link_to "Edit", edit_domain_path(domain),class: "material-symbols-outlined" %></td>
    <td><%= button_to "Delete" , domain , method: :delete ,class: "btn-primary"%></td>

  </tr>
  <% end %>
  </table>
</div>