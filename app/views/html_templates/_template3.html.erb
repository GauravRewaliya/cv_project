<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div style="text-align: center">
<style>
  
</style>
<div class="container">
  <div>
    <div class="row ">
      <div class="col-5">
        <div class="resume-base bg-primary user-dashboard-info-box p-4" style=" z-index: -1; position: absolute;">
          <div class="profile">
            <div class="jobster-user-info">
              <!-- <div class="profile-avatar"> -->
                <!-- <div> -->
                  <%= image_tag @curriculum_vitae.image.variant(resize_to_limit: [nil, 120]) , style: " width: 200px;  border-radius: 50%;     position: relative; z-index: 2;" if curriculum_vitae.image.attached? %>
                <!-- <img src="<%= url_for(@curriculum_vitae.image.variant(resize_to_limit: [nil, 120])) %>"
                  alt="Curriculum Vitae Image" style=" width: 250px;  border-radius: 50%;"> -->
              <!-- </div> -->
              <div class="profile-avatar-info mt-3">
                <h5 class="text-white">
                  <%= curriculum_vitae.candidate&.name %>
                </h5>
                <h6 class="text-white">
                  <%= curriculum_vitae.profile_desc %>
                </h6>
              </div>
            </div>
          </div>

          <% profile=curriculum_vitae.candidate.profile %>
             <div class="about-candidate border-top">
              <ul class="list-unstyled text-left">
                <li class="list-item">
                    <i class="fas fa-mobile-alt mx-4"></i><%= profile.contact %>
                </li>
                <li class="list-item">
                    <i class="fas fa-envelope-open-text mx-4"></i> <%= profile.email %>
                </li>
                <li class="list-item">
                  <i class="fas fa-map-marker-alt mx-4"></i><%= profile.address %>
                </li>
                <li class="list-item">
                    <i class="fas fa-solid fa-user mx-4"></i><%= profile.gender %>
                </li>
            </ul>
              </div>
            <div class="mt-0">
              <% if curriculum_vitae.core_skill %>
                <div class="card-header">
                  <h4>Core Skill:</h4>
                </div>
                <div class="card-body">
                  <p>
                    <%= curriculum_vitae.core_skill.title %>
                  </p>
                </div>
                <% end %>

                  <div class="card-header">
                    <h4>Supportive Skills:</h4>
                  </div>
                  <div class="card-body">
                    <% curriculum_vitae.supportive_skills.each do |supportive_skill| %>
                      <h5>Title:<%= supportive_skill.title %>
                      </h5>
                      <p>
                        <%= supportive_skill.desc %>
                      </p>
                      <% end %>
                  </div>
            </div>
        <style>
          .card-header , .card-body
          {
            color: white;
          }
        </style>
      </div>
    </div>
    <div class="col" style="z-index: -2;">
      <div class="resume-experience">
       
        <div class="timeline-box mt-4">
         
          

          <div class="jobster-candidate-timeline">

            <!--  -->
            <div class="card" style="margin-bottom: 10px;">
              <div class="card-header text-dark">
                <h5 class="resume-experience-title">Projects</h5>
              </div>
              <div class="card-body text-dark">
               
                <% curriculum_vitae.projects.each do |project| %>
            <div class="jobster-timeline-item">           
              <div class="jobster-timeline-info">
                <div class="dashboard-timeline-info">
                  <%if !project.start_date.blank? %>
                  <span class="jobster-timeline-time"><%=project.start_date%> 
                  <%= project.end_date.blank? ? " inProgerss" : "to "+project.end_date.to_s %>
                  </span>
                  <%end%>
                  <h6 class="mb-2"><%= project.title %></h6>
                  <p class="mt-2"><%= project.desc %></p>
                </div>
              </div>
            </div>
            <% end %>
              </div>
            </div>
            
            <!--  -->
          </div>
        </div>
       
      </div>
    </div>
  </div>
</div>
</div>
<style>
  .profile {
    margin-bottom: 25px;
  }

  .profile .jobster-user-info {
    display: inline-block;
    width: 100%;
  }

  .profile .jobster-user-info .profile-avatar {
    position: relative;
    height: 115px;
    width: 115px;
    border-radius: 100%;
    display: inline-block;
  }

  .profile .jobster-user-info .profile-avatar img {
    border-radius: 100%;
  }

  .profile .jobster-user-info .profile-avatar i {
    font-size: 16px;
    color: #21c87a;
    position: absolute;
    background: #ffffff;
    border-radius: 100%;
    cursor: pointer;
    height: 30px;
    width: 30px;
    line-height: 30px;
    text-align: center;
    bottom: 20px;
    right: -5px;
  }

  .about-candidate {
    padding: 25px 35px;
}

  .about-candidate .candidate-info {
    margin-bottom: 20px;
  }

  .resume-experience {
    padding-left: 10px;
    padding-top: 60px;
    padding-bottom: 60px;
    position: relative;
    padding-right: 50px;
    background: #f6f6f6;
  }

  @media (max-width: 991px) {
    .resume-experience {}

    .resume-experience:before {
      content: none;
    }

    .secondary-menu ul li {
      display: inline-block;
    }
  }

  @media (max-width: 575px) {
    .secondary-menu ul li a {}
  }

  .jobster-candidate-timeline .jobster-timeline-item .jobster-timeline-info h6 {
    color: #21c87a;
    margin: 5px 0 0px;
  }

  .jobster-candidate-timeline .jobster-timeline-item .jobster-timeline-info span {
    color: #212529;
    font-size: 13px;
    font-weight: 500;
  }
  li.list-item {
    color: white;
  }
  
</style>

</div>