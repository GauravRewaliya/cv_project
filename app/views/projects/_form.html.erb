<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">

      <ul>
        <% project.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
        <%= form.label :title, style: "display: block" ,class: "text-white" %>
          <%= form.text_field :title ,class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :desc, style: "display: block" ,class: "text-white" %>
          <%= form.text_area :desc ,class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :domain, style: "display: block" ,class: "text-white" %>
        <!-- nested form for by 3rd table -->
         <%= form.fields_for :project_domain_attributes, @project.project_domain do |f| %>
            <%= f.collection_select :domain_id, Domain.all, :id, :title, { include_blank: true } %>
              <% end %>
      </div>
     
      <div class="form-group">
        <!-- team_size -->
        <%= form.label :team_size, style: "display: block" ,class: "text-white" %>
          <%= form.number_field :team_size ,class:"form-control"%>
      </div>
      <div class="form-group">
        <!-- roles_responsability -->
        <%= form.label "Roles & Responsibilities", style: "display: block" ,class: "text-white" %>
          <%= form.text_area :role ,class:"form-control"%>
      </div>
      <div class="form-group">
      <div class="row">
        <div class="col-6">
        <%= form.label :start_date, style: "display: block" ,class: "text-white" %>
        <%= form.date_field :start_date , max: Date.today ,class: 'form-control  container' ,id: "start_date_id"%>
        </div>
        <div class="col-6">
        <%= form.label :end_date, style: "display: block" ,class: "text-white" %>
        <%= form.date_field :end_date , max: Date.today ,class: 'form-control  container',id: "end_date_id"%>
        </div>
      </div>
      </div>
      <div style="padding-left: 4%;" class="form-inline">
        <input type="checkbox" id="inprogress_id">
        <p style="margin-bottom: 0px;color: #cfdeea;">currently running</p>
      </div>
      <script>
        // its seem i can do without using getElementById
        e = document.getElementById("end_date_id")
        function updateEndDate()
         {
        end_date_id.value = end_date_id.min = start_date_id.value
         }
      start_date_id.addEventListener('change', updateEndDate);

        //  check box disabled , blank
        function endDateDisable()
        {
          if( inprogress_id.checked == true)
          {
            e.value = ""
            e.disabled = true;
          }
          else
          {
            e.disabled = false ;
            updateEndDate()
          }
        } 
        inprogress_id.addEventListener('change', endDateDisable);
        
      </script>

