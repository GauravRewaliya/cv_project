<style>
.col-6,.col-4,.col-5
{
margin: 0;
padding-left: 15px;
padding-right:15px;
}
</style>

  <%= project.errors.any? %>
<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2>
        <%# <%= pluralize(project.errors.count, "error" ) %> 
        <%# prohibited this project from being saved:  %>
      </h2>

      <ul>
        <% project.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="form-group">
        <%= form.label :title, style: "display: block" ,class: "text-white" %>
          <%= form.text_field :title ,class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :desc, style: "display: block" ,class: "text-white" %>
          <%= form.text_area :desc ,class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :core_skill, style: "display: block" ,class: "text-white" %>

          <!-- <%= form.collection_select :core_skill_id, TechStack.order(:title), :id, :title ,{ include_blank: true } ,{ selected: project.core_skill }%> -->
          <%= form.fields_for :project_core_tech_attributes, @project.project_core_tech do |cs| %>
            <%= cs.collection_select :tech_stack_id, TechStack.order(:title), :id, :title, { include_blank: true } %>
              <% end %>
      </div>

      <div class="form-group">
      <div class="row">
        <div class="col-6">
        <%= form.label :start_date, style: "display: block" ,class: "text-white" %>
        <%= form.date_field :start_date , max: Date.today ,class: 'form-control  container' ,id: "start_date_id"%>
        </div>
        <div class="col-6">
        <%= form.label :end_date, style: "display: block" ,class: "text-white" %>
        <%= form.date_field :end_date , max: Date.today ,class: 'form-control  container',id: "end_date_id"%>
        </div>
      </div>
      </div>
      <script>
        // its seem i can do without using getElementById
        function updateEndDate()
         {
        end_date_id.value = end_date_id.min = start_date_id.value
         }
      start_date_id.addEventListener('change', updateEndDate);
      </script>

      <div class="form-group">
        <%= form.label :supportive_skill , style: "display: block" ,class: "text-white" %>
          <div style="margin-left: 25% ; margin-right: 25%">
            <div>
              <%= form.collection_select(:supportive_skill_ids, TechStack.all, :id, :title , {}, { multiple: true,
                include_blank: false ,id: 'selectgr' }) %>

                </select>
                <script>
                  new MultiSelectTag('selectgr')  // id
                </script>


            </div>
          </div>
      </div>

      <div>
        <%= form.submit class: 'btn-primary' %>
      </div>
      <% end %>