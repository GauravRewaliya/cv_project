<div class="top_header">
  <h1 class="pos_l">Projects</h1>

<form action="projects" class="form-inline pos_r">
  <input type="text" name="search" placeholder="Search" class="form-control mr-sm-2 form-control-lg">
  <button type="submit" class="btn btn-lg btn-success">Search</button>
</form>
<%= link_to "New project", new_project_path,class: 'btn btn-primary new_pos' %>
</div>
<div class="table_gr">
  <table border=1 class="table table-hover table-striped" id="gr">
    <tr style="color:white;">
       <th>Title</th>
       <th>Description</th>
       <th>Edit</th>
      <th>Delete</th>
      <th>Show</th>
     </tr>
  <% @projects.each do |project| %>
  <tr>
    <td><p><%= project.title %></p></td>
    <td><p><%= project.desc %></p></td>
    <td><%= link_to "Edit", edit_project_path(project),class: "material-symbols-outlined" %></td>
    <td><%= button_to "Delete" , project , method: :delete ,class: "btn-primary"%></td>
    <td>
      <%#<%= link_to "Show this project", project %>
      <%= link_to (project) , class: 'material-symbols-outlined' do %>
      <span>Visibility</span>
      <%end%>
  </td>
  </tr>
  <% end %>
  </table>
</div>
