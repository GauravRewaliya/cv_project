<%= form_with(model: tech_stack) do |form| %>
  <% if tech_stack.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tech_stack.errors.count, "error") %> errors found , cant be save</h2>

      <ul>
        <% tech_stack.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" ,class: "text-white" %>
    <%= form.text_field :title ,style: "width: 100%;text-align: center;" ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :desc, style: "display: block" ,class: "text-white"%>
    <%= form.text_area :desc ,style: "width: 100%;text-align: center;height: 100px;"%>
  </div>
 
  <div>
    <%= form.submit class: 'btn-primary'%>
  </div>
<% end %>
