  .btn-primary{
    text-decoration: none;
    text-color: red;
  }

  div input[type=radio] {
    margin-left: 18px;
    margin-right: 5px;
}
.material-symbols-outlined{
  color: black;
}
.btn-sm{
  border-radius: 20px;
}
