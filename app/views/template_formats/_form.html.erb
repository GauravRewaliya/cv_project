<%= form_with(model: template_format) do |form| %>
  <% if template_format.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(template_format.errors.count, "error") %> errors found , cant be save</h2>

      <ul>
        <% template_format.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" ,class: "text-white" %>
    <%= form.text_field :name ,style: "width: 100%;text-align: center;" ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :layout, style: "display: block" ,class: "text-white"%>
    <%= form.text_area :layout ,style: "width: 100%;text-align: center;height: 100px;"%>
  </div>
 
  <div>
    <%= form.submit class: 'btn-primary'%>
  </div>
<% end %>
