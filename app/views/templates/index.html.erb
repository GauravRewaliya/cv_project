<style>
  .btn-primary{
    text-decoration: none;
    text-color: red;
  }
</style>
<h1>Tech_stack\Skills</h1>

<div id="templates" >
  <table border=1 class="table table-hover table-striped " , style="border: 2px solid black;">
    <tr style="background-color: darkblue; color:White">
      <th>name</th>
      <th>layout</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Show</th>
    </tr>
  <% @templates.each do |template| %>
  <tr>
    <td ><h6><%= template.name %></h6></td>
    <td><p><%= template.layout %></p></td>
    <td><%= link_to "Edit", edit_template_path(template) %></td>
    <td><%= button_to "Delete" , template , method: :delete ,class: "btn-primary"%></td>
    <td>
    <p>
      <%= link_to "Show this template", template %>
    </p>
  </td>
  </tr>
  <% end %>
  </table>
</div>

<%= link_to "New template", new_template_path ,class: 'btn-primary' %>
